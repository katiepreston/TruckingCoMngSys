html, body {
    height: 100%;
    margin: 0px;
    padding: 0px;
}

body {
    font-family: sans-serif;
    font-weight: bold;
}


#header {
    text-align: center;
    background-color: #FFF;
}

#headerImageHolder > img {
    height: 12em;
    vertical-align: bottom;
}

#headerTitle {
    color: #F00;
    font-style: italic;
    font-weight: bold;
    font-family: sans-serif;
    font-size: 2em;
}

#content {
    padding-top: 50px;
    text-align: center;
}

#stuff > *:last-child {
    margin-bottom: 12px;
}

#stuff > * {
    display: block;
    margin-top: 12px;
}

#stuff > table {
    display: inline-block;
}

#error_explanation {
    color: red;
}

input[type="submit"] {
    background-color: lightgrey;
    color: black;
    font-weight: bold;
}

#stuff {
    display: inline-block;
    padding: 25px;
    background-color: lightgrey;
}

#stuff td, th {
    text-align: left;
}

#stuff tr > td, th {
    padding-right: 10px;
}

#logout {
    position: absolute;
    top: 230px;
    width: 100%;
    text-align: center;
}
