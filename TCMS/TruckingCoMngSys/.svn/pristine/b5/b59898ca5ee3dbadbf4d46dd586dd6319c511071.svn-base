<% content_for :title do %>
Employees Archive
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Archived Employees</h1>

<table>
  <tbody>
    <% if @employees.size == 0 %>
      <tr>
        <td>
          There are no employee records
        </td>
      </tr>
    <% else %>
      <tr>
        <td>
          Name
        </td>
      </tr>
      <tr>
        <td>
        </td>
      </tr>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.last_name + ", " + employee.first_name + " " + employee.middle_name %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %> <!-- if -->
  </tbody>
</table>

<div>
<%= link_to "Back", action: "index" %>
</div>

<div>
<%= link_to 'Home', controller: "logins", action: "landing" %>
</div>

