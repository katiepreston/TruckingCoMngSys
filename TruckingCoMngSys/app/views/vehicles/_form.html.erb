<%= form_for(@vehicle) do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tbody>
      <tr>
        <td>
          Type
        </td>
        <td>
          <%= f.select :vehicle_type, options_for_select([ "Tractor Trailer", "Semi Trailer", "Cargo Van", "Flatbed Truck", "Box Truck", "Walk-In Truck" ]) %>
        </td>
      </tr>
      <tr>
        <td>
          Year
        </td>
        <td>
          <%= f.select :year, options_for_select( (2000..(DateTime.now.year + 1)), DateTime.now.year) %>
        </td>
      </tr>
      <tr>
        <td>
          Brand
        </td>
        <td>
          <%= f.text_field :brand %>
        </td>
      </tr>
      <tr>
        <td>
          Model
        </td>
        <td>
          <%= f.text_field :vehicle_model %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.submit %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
